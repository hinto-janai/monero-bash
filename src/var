#!/usr/bin/env bash
#
#                       Global Variables
#
# file/folder paths
readonly usrLocalShare="/usr/local/share"
readonly dotMoneroBash="$HOME/.monero-bash"
readonly config="$dotMoneroBash/config"
readonly wallets="$dotMoneroBash/wallets"
readonly bitMonero="$dotMoneroBash/.bitmonero"
readonly old="$installDirectory/old"
readonly bin="$installDirectory/bin"
readonly binMonero="$bin/monero"
readonly binXMRig="$bin/xmrig"
readonly binP2Pool="$bin/p2pool"
readonly hashlist="$installDirectory/src/txt/hashlist"
readonly state="$installDirectory/src/txt/state"
readonly sysd="/etc/systemd/system"
readonly xmrigConf="$config/xmrig.json"
readonly p2poolConf="$config/p2pool.json"

#
#						Colors
#
# regular
readonly black="printf \033[0;30m"
readonly red="printf \033[0;31m"
readonly green="printf \033[0;32m"
readonly yellow="printf \033[0;33m"
readonly blue="printf \033[0;34m"
readonly purple="printf \033[0;35m"
readonly cyan="printf \033[0;36m"
readonly white="printf \033[0;37m"
readonly # bold
readonly bblack="printf \033[1;30m"
readonly bred="printf \033[1;31m"
readonly bgreen="printf \033[1;32m"
readonly byellow="printf \033[1;33m"
readonly bblue="printf \033[1;34m"
readonly bpurple="printf \033[1;35m"
readonly bcyan="printf \033[1;36m"
readonly bwhite="printf \033[1;37m"
readonly # underscore
readonly ublack="printf \033[4;30m"
readonly ured="printf \033[4;31m"
readonly ugreen="printf \033[4;32m"
readonly uyellow="printf \033[4;33m"
readonly ublue="printf \033[4;34m"
readonly upurple="printf \033[4;35m"
readonly ucyan="printf \033[4;36m"
readonly uwhite="printf \033[4;37m"
readonly # high intensity
readonly iblack="printf \033[0;90m"
readonly ired="printf \033[0;91m"
readonly igreen="printf \033[0;92m"
readonly iyellow="printf \033[0;93m"
readonly iblue="printf \033[0;94m"
readonly ipurple="printf \033[0;95m"
readonly icyan="printf \033[0;96m"
readonly iwhite="printf \033[0;97m"
# no color
readonly off="printf \033[0m"
off="printf \033[0m"
