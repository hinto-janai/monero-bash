#!/usr/bin/env bash
#
#						build folders, files
#
# builds everything in monero-bash with default settings
build_Template()
{
	prompt_Sudo
	error_Sudo
	mkdir -p "$dotMoneroBash"
	mkdir -p "$bin"
	mkdir -p "$binMonero"
	mkdir -p "$binP2Pool"
	mkdir -p "$wallets"
	sudo cp -r "$installDirectory/config" "$config"
}

build_DotMoneroBash()
{
	build_Template
	mkdir -p "$bitMonero"
}

# just build monero-bash config
build_Config()
{
	prompt_Sudo
	error_Sudo
	sudo cp -r "$installDirectory/config" "$config"
}
