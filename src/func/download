#!/usr/bin/env bash
#
#						Download Functions
#
download_Template()
{
	tmp="$(find /tmp/monero-bash.* &>/dev/null)"
	wget -P "$tmp" -q --show-progress --content-disposition "$link"
}
download_Monero()
{
	local link="https://downloads.getmonero.org/cli/linux64"
	download_Template
}

download_MoneroBash()
{
	local link="$(wget -qO- "https://github.com/hinto-janaiyo/monero-bash/releases/latest" \
		| grep -o "/hinto-janaiyo/monero-bash/releases/download/.*/monero-bash-v.*" \
		| awk '{print $1}' \
		| sed 's/\"//')"
    download_Template
}

download_XMRig()
{
	local link="$(wget -qO- "https://github.com/xmrig/xmrig/releases/latest" \
		| grep -o "xmrig/xmrig/releases/download/.*/xmrig.*linux-static-x64.*" \
		| awk '{print $1}' \
		| sed 's/"//g')"
	download_Template
}

download_P2Pool()
{
	local link="$(wget -qO- "https://github.com/SChernykh/p2pool/releases/latest" \
		| grep -o "SChernykh/p2pool/releases/download/.*/p2pool-.*-linux-x64.*" \
		| awk '{print $1}' \
		| sed 's/"//g')"
	download_Template
}
